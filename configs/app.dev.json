{
  "database": {
    "queue_dsn": "postgresql://postgres:postgres@localhost:5432/photochanger",
    "stats_dsn": "postgresql://postgres:postgres@localhost:5432/photochanger"
  },
  "queue": {
    "statement_timeout_ms": 5000,
    "max_in_flight_jobs": 12
  },
  "worker": {
    "poll_interval_ms": 1000,
    "max_poll_attempts": 10,
    "retry_attempts": 5,
    "retry_backoff_seconds": 3.0,
    "request_timeout_seconds": 5.0
  },
  "stats": {
    "slot_cache_ttl_seconds": 300,
    "global_cache_ttl_seconds": 60,
    "recent_results_retention_hours": 72,
    "recent_results_limit": 10
  },
  "auth": {
    "jwt_access_ttl_seconds": 900,
    "admin_credentials_path": "secrets/runtime_credentials.json"
  }
}
