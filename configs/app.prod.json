{
  "database": {
    "queue_dsn": "postgresql://photochanger:secure@prod-db:5432/photochanger_prod",
    "stats_dsn": "postgresql://photochanger:secure@analytics-db:5432/photochanger_stats"
  },
  "queue": {
    "statement_timeout_ms": 3500,
    "max_in_flight_jobs": 16
  },
  "worker": {
    "poll_interval_ms": 500,
    "max_poll_attempts": 16,
    "retry_attempts": 6,
    "retry_backoff_seconds": 2.0,
    "request_timeout_seconds": 7.0
  },
  "stats": {
    "slot_cache_ttl_seconds": 300,
    "global_cache_ttl_seconds": 60,
    "recent_results_retention_hours": 72,
    "recent_results_limit": 10
  },
  "auth": {
    "jwt_access_ttl_seconds": 900,
    "admin_credentials_path": "secrets/runtime_credentials.json"
  }
}
