{
  "database": {
    "queue_dsn": "postgresql://photochanger:staging@staging-db:5432/photochanger_staging",
    "stats_dsn": "postgresql://photochanger:staging@staging-db:5432/photochanger_stats"
  },
  "queue": {
    "statement_timeout_ms": 4000,
    "max_in_flight_jobs": 12
  },
  "worker": {
    "poll_interval_ms": 750,
    "max_poll_attempts": 12,
    "retry_attempts": 5,
    "retry_backoff_seconds": 2.5,
    "request_timeout_seconds": 6.0
  },
  "stats": {
    "slot_cache_ttl_seconds": 300,
    "global_cache_ttl_seconds": 60,
    "recent_results_retention_hours": 72,
    "recent_results_limit": 10
  },
  "auth": {
    "jwt_access_ttl_seconds": 3600,
    "admin_credentials_path": "secrets/runtime_credentials.json"
  }
}
