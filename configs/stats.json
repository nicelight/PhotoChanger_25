{
  "postgres": {
    "dsn": "postgresql://postgres:postgres@localhost:5432/photochanger"
  },
  "cache": {
    "slot_ttl_seconds": 300,
    "global_ttl_seconds": 60
  },
  "recent_results": {
    "retention_hours": 72,
    "limit": 10
  },
  "worker": {
    "poll_interval_ms": 1000,
    "max_poll_attempts": 10,
    "retry_attempts": 5,
    "retry_backoff_seconds": 3.0,
    "request_timeout_seconds": 5.0
  }
}
