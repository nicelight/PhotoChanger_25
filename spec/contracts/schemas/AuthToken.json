{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AuthToken",
  "type": "object",
  "description": "JWT токен доступа, выдаваемый после успешной аутентификации",
  "required": ["access_token", "token_type", "expires_in_sec"],
  "properties": {
    "access_token": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+$",
      "description": "Подписанный JWT (формат base64url.header.base64url.payload.base64url.signature)."
    },
    "token_type": {
      "type": "string",
      "const": "bearer",
      "description": "Тип токена"
    },
    "expires_in_sec": {
      "type": "integer",
      "minimum": 300,
      "maximum": 7200,
      "description": "Время жизни токена в секундах (по умолчанию 3600, настраивается в допустимых пределах)."
    }
  },
  "additionalProperties": false
}
