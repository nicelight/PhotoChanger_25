{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "JobListResponse",
  "type": "object",
  "description": "Ответ административного списка задач. Содержит агрегированные представления задач и постраничную мета-информацию, рассчитанные на основе `job.expires_at`.",
  "required": ["data", "meta"],
  "properties": {
    "data": {
      "type": "array",
      "description": "Список агрегированных представлений задач очереди.",
      "items": {
        "$ref": "./JobAdminView.json"
      },
      "minItems": 0
    },
    "meta": {
      "type": "object",
      "description": "Параметры пагинации, совпадающие с контрактом административного UI.",
      "required": ["page", "page_size", "total"],
      "properties": {
        "page": {
          "type": "integer",
          "minimum": 1,
          "description": "Текущая страница выборки."
        },
        "page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "description": "Количество элементов на странице."
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Общее количество задач, удовлетворяющих фильтрам."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
