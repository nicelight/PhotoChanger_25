{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LoginRequest",
  "type": "object",
  "required": ["username", "password"],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 64,
      "pattern": "^[a-z0-9._-]+$",
      "description": "Имя предустановленного администратора (например, `serg`, `igor`)."
    },
    "password": {
      "type": "string",
      "minLength": 12,
      "maxLength": 128,
      "format": "password",
      "description": "Пароль администратора. Минимум 12 символов, допускаются латиница, цифры и базовые спецсимволы ASCII."
    }
  },
  "additionalProperties": false
}
