{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Settings",
  "type": "object",
  "description": "Глобальные настройки платформы и состояние секретов",
  "required": ["dslr_password", "provider_keys", "ingest", "media_cache"],
  "properties": {
    "dslr_password": {
      "$ref": "./SettingsDslrPasswordStatus.json"
    },
    "provider_keys": {
      "type": "object",
      "description": "Секреты и публичные параметры AI-провайдеров, индексированные по идентификатору",
      "additionalProperties": {
        "$ref": "./SettingsProviderKeyStatus.json"
      }
    },
    "ingest": {
      "$ref": "./SettingsIngestConfig.json"
    },
    "media_cache": {
      "$ref": "./MediaCacheSettings.json"
    }
  },
  "additionalProperties": false
}
