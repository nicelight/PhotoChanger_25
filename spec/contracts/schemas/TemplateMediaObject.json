{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TemplateMediaObject",
  "type": "object",
  "required": ["id", "slot_id", "setting_key", "mime", "size_bytes", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Идентификатор шаблонного медиа"
    },
    "slot_id": {
      "type": "string",
      "description": "Слот, с которым связана загрузка",
      "enum": [
        "slot-001",
        "slot-002",
        "slot-003",
        "slot-004",
        "slot-005",
        "slot-006",
        "slot-007",
        "slot-008",
        "slot-009",
        "slot-010",
        "slot-011",
        "slot-012",
        "slot-013",
        "slot-014",
        "slot-015"
      ]
    },
    "setting_key": {
      "type": "string",
      "description": "Ключ настройки, к которому привязан шаблон"
    },
    "label": {
      "type": ["string", "null"],
      "description": "Необязательный человекочитаемый ярлык шаблона"
    },
    "checksum": {
      "type": ["string", "null"],
      "description": "Контрольная сумма файла (например, SHA-256 в hex)",
      "pattern": "^[A-Fa-f0-9]{64}$"
    },
    "mime": {
      "type": "string",
      "description": "MIME-тип сохранённого файла"
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 0,
      "description": "Размер файла в байтах"
    },
    "uploaded_by": {
      "type": ["string", "null"],
      "description": "Администратор, загрузивший шаблон"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Момент загрузки шаблона"
    }
  },
  "additionalProperties": false
}
